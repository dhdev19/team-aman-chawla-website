// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum PropertyType {
  RESIDENTIAL
  PLOT
  COMMERCIAL
  OFFICES
}

enum PropertyFormat {
  APARTMENT
  VILLA
  PLOT
  SHOP
  OFFICE
  PENTHOUSE
}

enum PropertyStatus {
  AVAILABLE
  SOLD
  RESERVED
  NEW_LAUNCH
  FOR_SALE
  FOR_RENT
  UNDER_CONSTRUCTION
}

enum UserRole {
  ADMIN
  USER
}

enum ReferralSource {
  FAMILY_FRIENDS
  WEBSITE
  YOUTUBE
  ADVERTISEMENT
  OTHER
}

// User Model (for admin authentication)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

// Property Model
model Property {
  id               String         @id @default(cuid())
  name             String
  slug             String?        @unique
  type             PropertyType
  format           PropertyFormat?
  builder          String
  builderReraNumber String?
  description      String?
  price            String?
  location         String?
  locationAdvantages String[]     @default([])
  status           PropertyStatus @default(AVAILABLE)
  mainImage        String?
  images           String[]       @default([])
  amenities        String[]       @default([])
  metaTitle        String?
  metaKeywords     String?
  metaDescription  String?
  bankAccountName  String?
  bankName         String?
  bankAccountNumber String?
  bankIfsc         String?
  bankBranch       String?
  mapImage         String?
  projectLaunchDate DateTime?
  builderReraQrCode String?
  possession       String?
  configurations   PropertyConfiguration[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  // Relations
  enquiries Enquiry[]

  @@index([type])
  @@index([status])
  @@index([builder])
  @@index([slug])
  @@index([createdAt])
  @@map("properties")
}

// Property Configuration Model
model PropertyConfiguration {
  id              String   @id @default(cuid())
  propertyId      String
  configType      String   // 1BHK, 2BHK, 2.5BHK, 3BHK, or custom
  carpetAreaSqft  Float?
  price           String?
  floorPlanImage  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@map("property_configurations")
}

// Video Model
model Video {
  id          String   @id @default(cuid())
  title       String
  videoLink   String
  thumbnail   String?
  description String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([createdAt])
  @@map("videos")
}

// Enquiry Model (Contact Form Submissions)
model Enquiry {
  id         String    @id @default(cuid())
  name       String
  email      String
  phone      String?
  message    String
  type       String    @default("contact")
  propertyId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  property Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([type])
  @@index([createdAt])
  @@index([propertyId])
  @@map("enquiries")
}

// TAC Registration Model
model TACRegistration {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
  @@map("tac_registrations")
}

// Page Statistics Model (for tracking navbar clicks)
model PageStat {
  id         String    @id @default(cuid())
  pageName   String
  clickCount Int       @default(0)
  lastClicked DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([pageName])
  @@index([pageName])
  @@map("page_stats")
}

// Blog Types
enum BlogType {
  TEXT
  VIDEO
}

// Blog Model
model Blog {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  type           BlogType @default(TEXT)
  content        String   @db.Text
  excerpt        String?
  image          String?
  videoUrl       String?
  videoThumbnail String?
  metaTitle        String?
  metaKeywords     String?
  metaDescription  String?
  published      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([published])
  @@index([type])
  @@index([createdAt])
  @@map("blogs")
}

// Career Application Model
model CareerApplication {
  id              String         @id @default(cuid())
  name            String
  email           String
  whatsappNumber  String
  city            String
  referralSource  ReferralSource
  referralOther   String?        // Used when referralSource is OTHER
  resumeLink      String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([email])
  @@index([referralSource])
  @@index([createdAt])
  @@map("career_applications")
}

// Email Subscription Model
model EmailSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
  @@map("email_subscriptions")
}
